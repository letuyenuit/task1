@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" title="Manage">Hello @User.Claims.FirstOrDefault(x => x.Type == "Id").Value!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="Auth" asp-action="Login">Login</a>
        </li>
    }
</ul>